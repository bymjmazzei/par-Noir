# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Security
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-characters
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-must-be-at-least-32-characters

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/identity_protocol

# Redis (for session storage and caching)
# Use secure Redis configuration with authentication
REDIS_URL=redis://:your-super-secure-redis-password-change-this@localhost:6379
REDIS_TLS_ENABLED=false
REDIS_TLS_PORT=6380

# IPFS Configuration
IPFS_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_PROJECT_ID=your-infura-project-id
IPFS_PROJECT_SECRET=your-infura-project-secret

# Email (for notifications and recovery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OAUTH_RATE_LIMIT_MAX_REQUESTS=50

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000 