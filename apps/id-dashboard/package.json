{
  "name": "par-noir-dashboard",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Par Noir - Digital Identity Management Dashboard",
  "keywords": [
    "par-noir",
    "pn",
    "identity",
    "decentralized",
    "dashboard"
  ],
  "author": "Par Noir Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postbuild": "cp public/sw.js dist/ && cp public/manifest.json dist/ && cp -r public/icons dist/ && echo 'PWA files copied to dist'",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "postinstall": "echo 'Dependencies installed successfully'",
    "deploy:build": "npm run build && echo 'Build complete. Ready for deployment.'",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "audit": "npm run build && npm run lighthouse",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "lucide-react": "^0.263.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "chrome-launcher": "^1.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "lighthouse": "^12.8.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.2",
    "vite": "^7.1.1"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
}
